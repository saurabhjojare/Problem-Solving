package Pattern;

public class StarPyramid {
    public static void main(String x[]) {
        for (int i = 1; i <= 8; i++) {
            for (int k = 7; k >= i; k--) {
                System.out.print(" ");
            }
            for (int j = 1; j <= i; j++) {
                System.out.print("* ");
            }
            System.out.println();
        }
    }
}
